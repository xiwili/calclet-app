{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Calclet",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "writeFile": true,
        "readFile": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "message": true,
        "open": true,
        "save": true
      },
      "window": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Calclet",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.calclet.calclet",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}